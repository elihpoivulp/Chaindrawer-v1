{% extends 'base-manager.html.twig' %}
{% block page_specific_scripts %}
    {% include 'includes/scripts-tables.html.twig' %}
{% endblock %}
{% block breadcrumb %}
    {% include 'includes/breadcrumb.html.twig' with {
        'trails': {01: {
                'url': site_url('manager/teams/earnings'),
                'name': 'Earnings'
            },
            'active': {
                'url': null,
                'name': 'Details'
            }
        }
    } %}
{% endblock breadcrumb %}

{% block content %}
    <nav class="navbar navbar-light border-bottom border-top pl-0">
        <ul class="nav navbar-nav">
            <li class="nav-item">
                <a href="{{ site_url('manager/teams/earnings') }}" class="nav-link text-70"><i
                            class="material-icons icon--left">keyboard_backspace</i> Back to Earnings</a>
            </li>
        </ul>
    </nav>
    {% if p %}
        <div class="page-section pb-0">
            <div class="row border-bottom">
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-md-12 mb-24pt mb-lg-0">
                            <h2 class="mb-0">{{ p.AssetTeamName }}</h2>
                            <p class="text-70"><strong>Axie Team</strong></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 text-lg-right d-flex flex-lg-column border-lg-0 pb-16pt pb-lg-0 mb-0 mb-lg-24pt">
                    <div class="flex">
                        <p class="text-70 mb-8pt"><strong>Earnings</strong></p>
                        <p class="text-50">
                            {{ p.ManagerPayoutDate|date('d M Y') }}<br>
                            {{ p.ManagerPayoutID }}
                        </p>
                    </div>
                    {# <div> #}
                    {# <button class="btn btn-accent">Download <i class="material-icons icon--right">file_download</i> #}
                    {# </button> #}
                    {# </div> #}
                </div>
            </div>
        </div>
        {# <div class="border-bottom border-top py-20pt"> #}
        {# <strong> #}
        {# <a href="{{ site_url('manager/payouts') }}" class="text-70 font-size-16pt"><i class="material-icons icon--left">keyboard_backspace</i> Back to Payouts</a> #}
        {# </strong> #}
        {# </div> #}
        <div class="row">
            <div class="col-md-7">
                <div class="page-section pb-0 pb-lg-32pt">
                    <div class="card table-responsive mb-0 mb-lg-24pt">
                        <table class="table table-flush table--elevated">
                            <thead>
                            <tr>
                                <th>Details</th>
                                <th></th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td class=""><strong>Team Total Farmed SLP</strong></td>
                                <td class="text-right">{{ toMoneyFormat(p.FortnightAxieWithdrawalTotalSLP) }} SLP</td>
                            </tr>
                            <tr>
                                <td class=""><strong>Team Total AXS Received</strong></td>
                                <td class="text-right">{{ toMoneyFormat(p.FortnightAxieWithdrawalTotalAXS) }} AXS</td>
                            </tr>
                            <tr>
                                <td class="pb-0 text-uppercase"><strong>slp distribution</strong></td>
                                <td class="pb-0"></td>
                            </tr>
                            <tr>
                                <td class="border-top-0 pt-1">
                                    <p class="d-flex align-items-center text-muted mb-1" style="width: 130px;">
                                        <span class="flex text-body">Managers</span>
                                        <span class="d-flex align-items-center">{{ p.AxieTeamPayoutShareRate }}%</span>
                                    </p>
                                    <p class="d-flex align-items-center text-muted mb-1" style="width: 130px;">
                                        <span class="flex text-body">Chaindrawer</span>
                                        <span class="d-flex align-items-center">{{ p.ChainDrawerAxiePayoutShareRate + p.AxieScholarPayoutShareRate }}%</span>
                                    </p>
                                </td>
                                <td class="text-right border-top-0 pt-1">
                                    <p class="mb-1 text-50">{{ toMoneyFormat(p.AxieTeamPayoutTotalSLP) }} SLP</p>
                                    <p class="mb-0 text-50">{{ toMoneyFormat(p.ChainDrawerAxiePayoutTotalSLP + p.AxieScholarPayoutTotalSLP) }} SLP</p>
                                </td>
                            </tr>
                            <tr>
                                <td class="pb-0 text-uppercase border-top-0 pt-0"><strong>axs distribution</strong></td>
                                <td class="pb-0 border-top-0 pt-0"></td>
                            </tr>
                            <tr>
                                <td class="border-top-0 pt-1">
                                    <p class="d-flex align-items-center text-muted mb-1" style="width: 130px;">
                                        <span class="flex text-body">Managers</span>
                                        <span class="d-flex align-items-center">{{ p.AxieTeamPayoutShareRate }}%</span>
                                    </p>
                                    <p class="d-flex align-items-center text-muted mb-1" style="width: 130px;">
                                        <span class="flex text-body">Chaindrawer</span>
                                        <span class="d-flex align-items-center">{{ p.ChainDrawerAxiePayoutShareRate + p.AxieScholarPayoutShareRate }}%</span>
                                    </p>
                                </td>
                                <td class="text-right border-top-0 pt-1">
                                    <p class="mb-1 text-50">{{ toMoneyFormat(p.AxieTeamPayoutTotalAXS) }} AXS</p>
                                    <p class="mb-0 text-50">{{ toMoneyFormat(p.ChainDrawerAxiePayoutTotalAXS + p.AxieScholarPayoutTotalAXS) }} AXS</p>
                                </td>
                            </tr>
                            <tr class="selected">
                                <td class="pb-0 text-uppercase"><strong>my share</strong></td>
                                <td class="pb-0"></td>
                            </tr>
                            <tr class="selected">
                                <td class="border-top-0 pt-1">
                                    <p class="d-flex align-items-center text-muted mb-1" style="width: 130px;">
                                        <span class="flex text-body">SLP</span>
                                        <span class="d-flex align-items-center">{{ p.ManagerPayoutShareRate }}%</span>
                                    </p>
                                    <p class="d-flex align-items-center text-muted mb-1" style="width: 130px;">
                                        <span class="flex text-body">AXS</span>
                                        <span class="d-flex align-items-center">{{ p.ManagerPayoutShareRate }}%</span>
                                    </p>
                                </td>
                                <td class="text-right border-top-0 pt-1">
                                    <p class="mb-1 text-50">{{ toMoneyFormat(p.ManagerPayoutTotalSLP) }} SLP</p>
                                    <p class="mb-1 text-50">{{ toMoneyFormat(p.ManagerPayoutTotalAXS) }} AXS</p>
                                </td>
                            </tr>
                            </tbody>
                            <tfoot>
                            <tr>
                                <td class="text-right text-70"><strong>SLP Total</strong></td>
                                <td style="width: 120px;" class="text-right">
                                    <strong class="font-weight-bolder">{{ toMoneyFormat(p.ManagerPayoutTotalSLP) }}
                                        SLP</strong>
                                </td>
                            </tr>
                            <tr>
                                <td class="text-right text-70"><strong>AXS Total</strong></td>
                                <td style="width: 120px;"
                                    class="text-right"><strong>{{ toMoneyFormat(p.ManagerPayoutTotalAXS) }} AXS</strong>
                                </td>
                            </tr>
                            </tfoot>
                        </table>
                    </div>
                </div>
            </div>
            <div class="col-md-5">
                <div class="page-section">
                    <div class="d-flex flex-column mb-12pt">
                        <p class="text-uppercase mb-24pt d-block font-weight-bold">AXS/SLP Distribution</p>
                        {% for manager in m %}
                            {% set label = manager.getManagerAccountID %}
                            {% set class = '' %}
                            {% if user.getUserID == manager.UserID %}
                                {% set label = 'Me' %}
                                {% set class = 'bg-dark' %}
                            {% endif %}
                            <div class="d-flex flex-column justify-content-center mb-2 mt-24pt mt-lg-0">
                                <small class="d-flex align-items-center font-weight-bold text-muted mb-1 {{ class }}">
                                    <span class="text-70 flex text-body ml-2">{{ label }}</span>
                                    <span class="mr-4">{{ manager.OwnershipRate }}%</span>
                                    <span class="mx-4">{{ toMoneyFormat((p.AxieTeamPayoutTotalSLP * (manager.OwnershipRate / 100))|round(1)) }} SLP</span>
                                    <span class="mr-2">{{ toMoneyFormat((p.AxieTeamPayoutTotalAXS * (manager.OwnershipRate / 100))|round(1)) }} AXS</span>
                                </small>
                            </div>
                        {% endfor %}
                    </div>
                    <div class="row">
                        <div class="col-12">
                            <p class="text-uppercase mb-24pt d-block font-weight-bold">Account Balance</p>
                        </div>
                        <div class="col-6">
                            <div class="card card-group-row__card">
                                <div class="card-body d-flex flex-column align-items-center">
                                    <div class="h3 mb-1">0.00</div>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar mb-0 mr-3 avatar-xs">
                                            <img src="{{ load_static('assets/chndrwr/images/axies/axieshards.png') }}"
                                                 alt="Axie Team Avatar"
                                                 class="avatar-img rounded-circle">
                                        </div>
                                        <div class="flex">
                                            <p class="mb-0"><strong>AXS</strong></p>
                                            <p class="text-50 mb-0 mt-n1 d-flex align-items-center">
                                                <i class="material-icons text-accent-red ml-4pt icon-16pt">trending_flat</i>
                                                &nbsp;
                                                0%
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="card card-group-row__card">
                                <div class="card-body d-flex flex-column align-items-center">
                                    <div class="h3 mb-1">1,526.55</div>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar mb-0 mr-3 avatar-xs">
                                            <img src="{{ load_static('assets/chndrwr/images/axies/slp.png') }}"
                                                 alt="Axie Team Avatar"
                                                 class="avatar-img rounded-circle">
                                        </div>
                                        <div class="flex">
                                            <p class="mb-0"><strong>SLP</strong></p>
                                            <p class="text-50 mb-0 mt-n1 d-flex align-items-center">
                                                <i class="material-icons text-accent ml-4pt icon-16pt">trending_up</i>
                                                &nbsp;
                                                51.5%
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="page-section">
            <h4>No data</h4>
        </div>
    {% endif %}

{% endblock content %}

