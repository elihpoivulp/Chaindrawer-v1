{% extends 'base-admin.html.twig' %}
{% block page_specific_scripts %}
    {% include 'includes/scripts-tables.html.twig' %}
{% endblock %}
{% block breadcrumb %}
    {% include 'includes/breadcrumb.html.twig' with {
        'section': 'Managers',
        'trails': {
            0: {
                'url': site_url('admin'),
                'name': 'Dashboard'
            },
            'active': {
                'url': null,
                'name': 'Managers'
            }
        }
    } %}
{% endblock breadcrumb %}
{% block content %}
    <div class="container-fluid page__container">
        <div class="page-section">
            <h4>All Managers</h4>
            <div class="card card--raised">
                <div class="table-responsive" data-toggle="lists" data-lists-sort-by="manager-date-added"
                     data-lists-sort-desc="false"
                     data-lists-values='["manager-name", "manager-phone", "manager-date-added"]'>
                    <div class="card-header">
                        <div class="row align-items-center" style="white-space: nowrap;">
                            <div class="col-lg-auto">
                                <div class="search-form form-control-flush search-form--dark d-lg-inline-flex mb-8pt mb-lg-0">
                                    <label for="search-table" class="d-none"></label>
                                    <input type="text" id="search-table" class="form-control search w-lg-auto"
                                           placeholder="Search Managers...">
                                    <button class="btn" type="button" role="button"><i class="material-icons">search</i>
                                    </button>
                                </div>
                            </div>
                            <div class="col-lg d-flex flex-wrap align-items-center mt-2 mt-lg-0">
                                <a href="{{ site_url('admin/managers/new') }}"
                                   class="ml-lg-auto btn btn-sm btn-outline-accent-yellow btn-rounded">
                                    <i class="material-icons mr-2">add</i>
                                    <span class="mr-2">New Manager</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <table class="table mb-0 thead-border-top-0 table-nowrap">
                        <thead>
                        <tr>
                            <th>
                                <a href="javascript:void(0)"
                                   class="sort"
                                   data-sort="manager-name">Name</a>
                            </th>
                            <th>Account<br>Balance</th>
                            <th>Account<br>Asset</th>
                            <th style="width: 48px;" class="text-center">
                                Phone
                            </th>
                            <th class="text-center">
                                <a href="javascript:void(0)"
                                   class="sort"
                                   data-sort="manager-date-added">Date Added</a>
                            </th>
                        </tr>
                        </thead>
                        <tbody class="list" id="managers">
                        {% for manager in managers %}
                            <tr>
                                <td>
                                    <div class="media flex-nowrap align-items-center"
                                         style="white-space: nowrap;">
                                        <div class="avatar avatar-32pt mr-8pt">

                                            <span class="avatar-title rounded-circle">{{ manager.getUserFirstName|first|upper ~ manager.getUserLastName|first|upper }}</span>

                                        </div>
                                        <div class="media-body">

                                            <div class="d-flex flex-column">
                                                <p class="mb-0"><strong
                                                            class="manager-name">{{ manager.getUserName }}</strong>
                                                </p>
                                                <small class="js-lists-values-email text-50">{{ manager.getUserEmail }}</small>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <small class="text-50">{{ peso_symbol ~ ' ' ~ manager.manager.getFormattedBalance }}</small>
                                </td>
                                <td>
                                    <small class="text-50">{{ peso_symbol ~ ' ' ~ manager.manager.getFormattedAsset }}</small>
                                </td>
                                <td class="text-center">
                                    <small class="text-50">{{ manager.getUserPhone }}</small>
                                </td>
                                <td class="text-center">
                                    <small class="manager-date-added text-50">{{ manager.manager.getManagerDateAdded|date('M j, o') }}</small>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <div class="card-footer p-8pt">

                    <ul class="pagination justify-content-start pagination-xsm m-0">
                        <li class="page-item disabled">
                            <a class="page-link"
                               href="#"
                               aria-label="Previous">
                                        <span aria-hidden="true"
                                              class="material-icons">chevron_left</span>
                                <span>Prev</span>
                            </a>
                        </li>
                        <li class="page-item dropdown">
                            <a class="page-link dropdown-toggle"
                               data-toggle="dropdown"
                               href="#"
                               aria-label="Page">
                                <span>1</span>
                            </a>
                            <div class="dropdown-menu">
                                <a href=""
                                   class="dropdown-item active">1</a>
                                <a href=""
                                   class="dropdown-item">2</a>
                                <a href=""
                                   class="dropdown-item">3</a>
                                <a href=""
                                   class="dropdown-item">4</a>
                                <a href=""
                                   class="dropdown-item">5</a>
                            </div>
                        </li>
                        <li class="page-item">
                            <a class="page-link" href="#"
                               aria-label="Next">
                                <span>Next</span>
                                <span aria-hidden="true"
                                      class="material-icons">chevron_right</span>
                            </a>
                        </li>
                    </ul>

                </div>
                <!-- <div class="card-body bordet-top text-right">
15 <span class="text-50">of 1,430</span> <a href="#" class="text-50"><i class="material-icons ml-1">arrow_forward</i></a>
</div> -->

            </div>

        </div>
    </div>
{% endblock content %}