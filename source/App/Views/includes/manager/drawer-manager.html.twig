{% block page_specific_styles %}
    <style>
        .sidebar-brand-icon {
            width: unset !important;
            margin: 0 auto !important;
            height: 48px;
        }
    </style>
{% endblock %}
<div class="mdk-drawer js-mdk-drawer" id="default-drawer">
    <div class="mdk-drawer__content">
        <div class="sidebar sidebar-dark sidebar-left" data-perfect-scrollbar>
            <a href="{{ site_url('manager') }}" class="sidebar-brand sidebar-brand-dark bg-dark">
                <img class="sidebar-brand-icon" src="{{ load_static('assets/chndrwr/images/cd-landscape-logo-cropped.png') }}"
                     alt="{{ app }} logo">
{#                {{ app }}#}
            </a>
            <div class="sidebar-heading">Account</div>
            <ul class="sidebar-menu">
                <li class="sidebar-menu-item {% if get_uri(1) == 'dashboard' %}active{% endif %}">
                    <a class="sidebar-menu-button"
                       href="{{ site_url('manager/dashboard') }}">
                        <span class="material-icons sidebar-menu-icon sidebar-menu-icon--left">insert_chart_outlined</span>
                        <span class="sidebar-menu-text">Dashboard</span>
                    </a>
                </li>
            </ul>
            <div class="sidebar-heading">Axie</div>
            <ul class="sidebar-menu">
                <li class="sidebar-menu-item {% if get_uri(1) == 'teams' %}active{% endif %}">
                    <a class="sidebar-menu-button"
                       href="{{ site_url('manager/teams') }}">
                        <span class="sidebar-menu-icon sidebar-menu-icon--left fa fa-rocket"></span>
                        <span class="sidebar-menu-text">My Teams</span>
                    </a>
                </li>
                <li class="sidebar-menu-item {% if get_uri(1) == 'payouts' %}active open{% endif %}">
                    <a class="sidebar-menu-button"
                       data-toggle="collapse"
                       href="#components_menu">
                        <span class="material-icons sidebar-menu-icon sidebar-menu-icon--left">monetization_on</span>
                        Payouts
                        <span class="ml-auto sidebar-menu-toggle-icon"></span>
                    </a>
                    <ul class="sidebar-submenu collapse sm-indent {% if get_uri(1) == 'payouts' %}show{% endif %}"
                        id="components_menu">
                        <li class="sidebar-menu-item {% if get_uri(1) == 'payouts' and (get_uri(2) matches '/^\\d+$/' or get_uri(2) == null) %}active{% endif %}">
                            <a class="sidebar-menu-button"
                               href="{{ site_url('manager/payouts') }}">
                                <span class="sidebar-menu-text">All</span>
                            </a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>